<h1>Languages |<b><%= link_to "Home", root_path %></h1>

<table border= '1'>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @languages.each do |language| %>
    
      <tr>
        <td><%= language.name %></td>
        <td><%= link_to 'Show', language %><br/>
